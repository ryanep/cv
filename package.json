    "@types/html-minifier": "^4.0.2",
    "@types/jest": "^29.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^16.18.68",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/testing-library__react": "^10.2.0",
    "cross-env": "^7.0.3",
