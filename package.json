{
  "name": "@ryanep/cv",
  "description": "A personal curriculum vitae.",
  "version": "0.0.0-development",
  "author": "Ryan Elliott-Potter <me@ryanep.com>",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "npm run build:html && npm run build:css",
    "build:html": "tsx ./scripts/build",
    "build:css": "tailwindcss -i ./src/styles/root.css -o ./dist/styles.css --minify",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "updates": "npm-check-updates --interactive",
    "prepare": "husky"
  },
  "devDependencies": {
    "@ryanep/eslint-config": "^1.11.0",
    "@ryanep/prettier-config": "^1.2.2",
    "@tailwindcss/cli": "^4.1.12",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/html-minifier": "^4.0.5",
    "@types/node": "^22.18.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@types/testing-library__react": "^10.2.0",
    "@vitejs/plugin-react": "^4.7.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "html-minifier": "^4.0.0",
    "html-validate": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.10",
    "npm-check-updates": "^18.0.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "serve": "^14.2.4",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0"
  }
}
